{
  "name": "@sharedo/platform",
  "version": "1.0.0",
  "private": true,
  "description": "ShareDo Platform - Unified CLI, VS Code Extension, and MCP Server",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build --stream",
    "build:core": "lerna run build --scope=@sharedo/core",
    "build:platform-adapter": "lerna run build --scope=@sharedo/platform-adapter",
    "build:business": "lerna run build --scope=@sharedo/business",
    "build:cli": "lerna run build --scope=@sharedo/cli",
    "build:vscode": "lerna run build --scope=@sharedo/vscode",
    "build:mcp": "lerna run build --scope=@sharedo/mcp",
    "clean": "lerna run clean --parallel",
    "test": "lerna run test --stream",
    "lint": "lerna run lint --stream",
    "typecheck": "tsc --build",
    "dev": "lerna run dev --parallel"
  },
  "devDependencies": {
    "@types/node": "^18.19.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.56.0",
    "lerna": "^7.4.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}