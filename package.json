{
  "name": "@sharedo/platform",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "install:all": "npm install && lerna link",
    "build": "lerna run build",
    "test": "lerna run test",
    "clean": "lerna run clean && rimraf node_modules",
    "lint": "lerna run lint",
    "dev": "lerna run dev --parallel",
    "dev:cli": "npm run build && cd packages/cli && npm run dev",
    "dev:vscode": "cd packages/vscode && npm run watch",
    "dev:mcp": "npm run build && cd packages/mcp && npm run dev",
    "publish": "lerna publish",
    "version": "lerna version",
    "worktree:setup": "node scripts/run-setup-worktrees.js",
    "worktree:sync": "node scripts/sync-worktrees.js",
    "worktree:status": "git worktree list",
    "worktree:clean": "node scripts/clean-worktrees.js",
    "claude:core": "cd ../ShareDo-Platform/sharedo-core && claude",
    "claude:business": "cd ../ShareDo-Platform/sharedo-business && claude",
    "claude:platform-adapter": "cd ../ShareDo-Platform/sharedo-platform-adapter && claude",
    "claude:cli": "cd ../ShareDo-Platform/sharedo-cli && claude",
    "claude:vscode": "cd ../ShareDo-Platform/sharedo-vscode && claude",
    "claude:mcp": "cd ../ShareDo-Platform/sharedo-mcp && claude"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "lerna": "^8.0.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
