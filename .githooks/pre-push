#!/bin/bash

# Pre-push hook that reminds to use Claude Code for build validation

echo "ü§ñ Claude Code Build Reminder"
echo "=============================="
echo ""
echo "Before pushing, have you:"
echo ""
echo "1. ‚úì Asked Claude to check the build?"
echo "   In VS Code: Ctrl+Shift+L ‚Üí 'Check my build'"
echo ""
echo "2. ‚úì Asked Claude to run tests?"
echo "   In VS Code: Ctrl+Shift+L ‚Üí 'Run all tests'"
echo ""
echo "3. ‚úì Asked Claude to fix TypeScript errors?"
echo "   In VS Code: Ctrl+Shift+L ‚Üí 'Fix TypeScript errors'"
echo ""

read -p "Have you completed Claude Code validation? (y/n) " -n 1 -r
echo
if [[ ! $REPLY =~ ^[Yy]$ ]]
then
    echo "‚ùå Push cancelled. Please use Claude Code to validate first."
    echo ""
    echo "Quick command:"
    echo "  1. Open VS Code"
    echo "  2. Press Ctrl+Shift+L"
    echo "  3. Type: 'Validate my changes for pushing'"
    exit 1
fi

echo "‚úÖ Proceeding with push..."